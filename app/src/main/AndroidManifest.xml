<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vgrec.espressosamples" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EnterNameActivity"
            android:label="@string/title_activity_enter_name" >
        </activity>
        <activity
            android:name=".DisplayNameActivity"
            android:label="@string/title_activity_display_name" >
        </activity>
        <activity
            android:name=".SpinnerSelectionActivity"
            android:label="@string/title_activity_spinner_selection" >
        </activity>
        <activity
            android:name=".CustomListActivity"
            android:label="@string/title_activity_custom_list" >
        </activity>
        <activity
            android:name=".BookDetailsActivity"
            android:label="@string/title_activity_book_details" >
        </activity>
    </application>

</manifest>
